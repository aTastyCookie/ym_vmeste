<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8'>

    <meta http-equiv="cache-control" content="max-age=0" />
    <meta http-equiv="cache-control" content="no-cache" />
    <meta http-equiv="expires" content="0" />
    <meta http-equiv="expires" content="Tue, 01 Jan 1980 1:00:00 GMT" />
    <meta http-equiv="pragma" content="no-cache" />

    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/saasbundle/css/bootstrap.min.css') }}" />
    <link rel="stylesheet" href="{{ asset('bundles/saasbundle/css/style.css') }}" />
    <script src="{{ asset('bundles/saasbundle/js/libs/jquery-2.1.1.min.js') }}"></script>
    <script src="{{ asset('bundles/saasbundle/js/bootstrap-dropdown.js') }}"></script>
    <script src="{{ asset('bundles/saasbundle/js/bootstrap-modal.js') }}"></script>
    <script src="{{ asset('bundles/saasbundle/js/app.js') }}"></script>
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>
<body>
<!-- Header - begin -->
<div class="navbar navbar-fixed-top navbar-inverse">
<div class="navbar-inner">
		<div class="container">
			<a class="brand" href="#">Vmeste</a>

{% if is_granted("ROLE_ADMIN") %}
    {{ include ('VmesteSaasBundle:Administrator:mainMenu.html.twig') }}
{% elseif is_granted("ROLE_USER") %}
    {{ include ('VmesteSaasBundle:Customer:mainMenu.html.twig') }}
{% endif %}
		</div>
	</div>
</div>
<!-- Header - end -->

<div class="container" style="margin-top: 40px; margin-bottom: 40px;">
{% block body %}{% endblock %}
</div>

{% block javascripts %}{% endblock %}

</body>
</html>
